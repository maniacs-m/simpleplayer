<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.sergez.splayer"
          android:versionCode="37"
          android:versionName="2.1"
          android:installLocation="auto"
        >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:debuggable="false"
            >
        <activity
                android:name=".activity.SimplePlayerActivity"
                android:label="@string/app_name"
                android:launchMode="singleTask"
                android:configChanges="orientation|screenSize|screenLayout"
                android:theme="@style/Theme.Sherlock">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity
                android:name=".activity.PreferencesActivity"
                android:label="@string/preferences_activity_name"
                android:theme="@style/Theme.Sherlock"
                android:configChanges="orientation|screenSize|screenLayout"
                android:parentActivityName="org.sergez.splayer.activity.SimplePlayerActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="org.sergez.splayer.activity.SimplePlayerActivity"/>
        </activity>
        <service android:name=".service.SimplePlayerService" android:enabled="true"/>
    </application>
</manifest>