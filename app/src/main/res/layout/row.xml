<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_bg_selector"
                android:orientation="horizontal"
                android:id="@+id/layout_rows"
                android:padding="2dp">

    <!--  Left sided Thumbnail image -->

    <ImageView
            android:id="@+id/thumbnail"
            android:padding="2dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="56sp"
            android:layout_height="56sp"
            />

    <!-- Name of the song-->
    <TextView
            android:id="@+id/text_toptext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_centerVertical="true"
            android:text="Title of the song tttttttttttttttt  ttttttttt"
            android:textColor="@color/near_white"
            android:typeface="sans"
            android:textSize="17sp"
            android:maxLines="2"
            android:layout_marginRight="37sp"
            android:ellipsize="marquee"

            />

    <!-- Rightend Duration -->
    <TextView
            android:id="@+id/text_track_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="--:--"
            android:textSize="14sp"
            android:textColor="@color/near_white"
            android:textStyle="bold"/>
    <ImageView
            android:id="@+id/image_playing"
            android:background="@drawable/ic_media_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

</RelativeLayout>
